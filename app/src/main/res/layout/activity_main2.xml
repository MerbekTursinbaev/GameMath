<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Duris juwaplar sani"
        android:textColor="@color/cardview_dark_background"
        android:textSize="40sp"
        android:layout_marginTop="28dp"/>
    <TextView
        android:id="@+id/tvView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="35sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/juwap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:textColor="@color/cardview_dark_background"
        android:textSize="40sp"
        android:layout_marginTop="28dp"/>

    <Button
        android:id="@+id/buttonResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:text="Na'tiyjeler"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/buttonResult"
        app:layout_constraintTop_toTopOf="@id/buttonResult"
        app:layout_constraintBottom_toBottomOf="@id/buttonResult"
        android:layout_margin="20dp"
        android:text="Artqa"
        android:textSize="16sp"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>